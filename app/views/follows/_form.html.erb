<%= form_with model: follow, method: :patch  do |f| %>
  <%= f.hidden_field :status, value: 'accepted' %>
  <%= f.submit 'Accept', class: 'rounded-full border border-white px-4 py-2' %>
<% end %>

<%= form_with model: follow, method: :patch  do |f| %>
  <%= f.hidden_field :status, value: 'rejected' %>
  <%= f.submit 'Reject', class: 'rounded-full border border-white px-4 py-2' %>
<% end %>