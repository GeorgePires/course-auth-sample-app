<article class="px-4 py-6 flex items-start space-x-4">
  <div class="shrink-0 h-12 w-12 rounded-full bg-sky-300"></div>
  <div class="w-full space-y-1 text-sm">
    <%= link_to tweet.author.email, tweet.author, class: "font-semibold" %>
    <span class="text-xs text-gray-400"> - <%= tweet.created_at.strftime("%c") %></span>
    <p><%= tweet.body %></p>
  </div>
</article>