<div class="divide-y divide-zinc-700">
  <div class="px-4 py-6">
    <h1 class="text-xl">Home</h1>

    <div class="flex space-x-4">
      <div class="shrink-0 h-8 w-8 rounded-full bg-sky-400 mt-2"></div>
      <%= form_with model: @tweet, method: :post, class: "w-full" do |f| %>
        <div class="w-full divide-y divide-zinc-700 space-y-1">
          <div class="w-full">
            <%= f.label :body, "Tweet", class: "sr-only" %>
            <%= f.text_area :body, class: "w-full bg-transparent px-4 py-2", placeholder: "What's happening?" %>
          </div>
          <div class="w-full flex flex-col items-end pt-4">
            <%= f.submit "Tweet", class: "flex justify-center py-2 px-4 border border-transparent rounded-full shadow-sm text-sm font-bold text-white bg-sky-500 hover:bg-sky-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-sky-500" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <section class="divide-y divide-zinc-700">
    <%= render @tweets %>
  </section>
</div>